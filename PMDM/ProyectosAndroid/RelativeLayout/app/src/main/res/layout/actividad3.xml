<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/cadrado1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:backgroundTint="@color/design_default_color_secondary"/>

    <Button
        android:id="@id/cadrado2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="2"
        android:layout_below="@id/cadrado1"
        android:backgroundTint="#FFEB3B"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:layout_toRightOf="@id/cadrado1"
        android:backgroundTint="#E91E63"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:layout_alignBottom="@+id/cadrado2"
        android:backgroundTint="@color/cyan"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:layout_toRightOf="@+id/cadrado2"
        android:layout_alignBottom="@id/cadrado2"
        android:backgroundTint="#89FF00"/>

    <Button
        android:id="@id/cadrado6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:layout_alignRight="@id/cadrado2"
        android:layout_below="@id/cadrado2"
        android:backgroundTint="#FD0056"/>

    <Button
        android:id="@id/cadrado7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:layout_below="@+id/cadrado6"
        android:layout_alignLeft="@id/cadrado6"
        android:backgroundTint="#FF7CA9"/>

    <Button
        android:id="@id/cadrado8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="8"
        android:layout_below="@+id/cadrado7"
        android:backgroundTint="#E074F3"/>

    <Button
        android:id="@id/cadrado9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:layout_toRightOf="@+id/cadrado8"
        android:layout_alignBottom="@+id/cadrado8"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@id/cadrado10"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="10"
        android:layout_toRightOf="@+id/cadrado9"
        android:layout_alignTop="@id/cadrado8"
        android:backgroundTint="@android:color/darker_gray"/>

    <Button
        android:id="@id/lorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem"
        android:padding="60dp"
        android:textColor="@color/black"
        android:layout_below="@+id/cadrado10"
        android:backgroundTint="@android:color/holo_blue_bright"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ipsum"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/lorem"
        android:layout_alignBaseline="@id/lorem"
        android:backgroundTint="#FFEB3B"/>

</RelativeLayout>